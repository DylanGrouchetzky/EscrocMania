{% extends "frontend/template.html.twig" %}
{% block title %}Inscription{% endblock %}
{% block body %}
<div class="row bg-hero-section" style="background-image:url('{{asset('img/bg-inscription.jpg')}}');background-position:bottom">
    <div class="col-10 mx-auto d-flex justify-content-start align-items-end">
        <div class="block-title">
            <h1 class="title-hero-section">Inscription</h1>
        </div>
    </div>
</div>
<div class="row my-5">
    <div class="col-10 mx-auto">
        <div class="row">
            <div class="col-6">
                <p>Veuillez rentrer les informations suivantes :</p>
                {{form_start(signInForm)}}
                    <div class="row">
                        <div class="col-6">
                            {{form_row(signInForm.firstName)}}
                        </div>
                        <div class="col-6">
                            {{form_row(signInForm.lastName)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            {{form_row(signInForm.email)}}
                        </div>
                        <div class="col-6">
                            {{form_row(signInForm.speudo)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            {{form_row(signInForm.password)}}
                        </div>
                        <div class="col-6">
                            {{form_row(signInForm.birthday)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary"><i class="feather-chevrons-right"></i> S'Inscrire</button>
                        </div>
                    </div>
                {{form_end(signInForm)}}
            </div>
            <div class="col-6">
                <img src="{{asset('img/login.webp')}}" alt="" class="img-login">
            </div>
        </div>
    </div>
</div>
{% endblock %}