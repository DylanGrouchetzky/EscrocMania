{% extends "frontend/template.html.twig" %}
{% block title %}
    Accueil
{% endblock %}
{% block body %}

<div class="row bg-hero-section">
    <div class="col-10 mx-auto d-flex justify-content-start align-items-end">
        <div class="block-title">
            <h1 class="title-hero-section font-f-special">Votre Profil</h1>
        </div>
    </div>
</div>

<div class="row my-5">
    <div class="col-10 mx-auto p-5 d-flex align-items-center justify-content-center" style="background-image:url('{{asset('img/bg-profil.webp')}}');background-size: cover;height: 41rem;">
        <div class="p-5 w-100" style="background-color: #ffffff6e;">
            <div class="row ">
                <div class="col-12">
                    <p>Pseudo : {{user.pseudo}} <button class="btn btn-small btn-primary mx-3"><i class="feather-edit"></i></button></p>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p>Prénom : {{user.firstName}} <button class="btn btn-small btn-primary mx-3"><i class="feather-edit"></i></button></p>
                </div>
                <div class="col-6">
                    <p>Nom : {{user.lastName}} <button class="btn btn-small btn-primary mx-3"><i class="feather-edit"></i></button></p>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p>Anniverssaire le : {{user.birthday|date("m/d/Y")}} <button class="btn btn-small btn-primary mx-3"><i class="feather-edit"></i></button></p>
                </div>
                <div class="col-6">
                    <p>Age : {{user.age}} <button class="btn btn-small btn-primary mx-3"><i class="feather-edit"></i></button></p>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p>Créé le : {{user.createdAt|date("m/d/Y")}} <button class="btn btn-small btn-primary mx-3"><i class="feather-edit"></i></button></p>
                </div>
                <div class="col-6">
                    <p>Modifié le : {{user.modifiedAt|date("m/d/Y")}} <button class="btn btn-small btn-primary mx-3"><i class="feather-edit"></i></button></p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <p>Email : {{user.email}} <button class="btn btn-small btn-primary mx-3"><i class="feather-edit"></i></button></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}