{% if tags|length > 0 %}
    <div class="row">
        <div class="col-10 mx-auto">
            <h2>Quelques Tags</h2>
            <div class="row my-5">
            {% set numberTags = 0 %}
            {% for tag in tags %}
                <div class="col-3 mb-4">   
                    <a href="" class="link-card" >
                        <div class="
                            {% if numberTags % 2 == 0 %}
                                bg-card-red
                            {% else %}
                                bg-card-bleu
                            {% endif %}
                            d-flex align-items-center justify-content-center card-tag">
                            <p class="f-2r" style="padding: 0.3rem 2rem 0.6rem 2rem;background-color: #ffffff5e;">{{tag.name}}</p>
                        </div>
                    </a>
                </div>
                {% set numberTags = numberTags + 1 %}
            {% endfor %}
            </div>
        </div>
    </div>
{% endif %}

