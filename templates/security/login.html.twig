{% extends 'frontend/template.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row bg-hero-section">
    <div class="col-10 mx-auto d-flex justify-content-start align-items-end">
        <div class="block-title">
            <h1 class="title-hero-section">Espace de connection</h1>
        </div>
    </div>
</div>
<div class="row my-5">
    <div class="col-10 mx-auto">
        <div class="row">
            <div class="col-6 d-flex justify-content-center align-items-center">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    

                    <h1 class="h3 mb-4 font-weight-normal">Information de connection</h1>
                    <p class="mb-5">Veuillez rentrer vos information pour vous connecter : </p>
                    <div class="row my-4">
                        <div class="col-12">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                    </div>
                    <div class="row my-4">
                        <div class="col-12">
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
                    <div class="row my-4">
                        <div class="col-12 d-flex justify-content-end">
                            <button class="btn btn-primary" type="submit">Connection</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-6">
                <img src="{{asset('img/login.webp')}}" alt="" class="img-login">
            </div>
        </div>
    </div>
</div>
{% endblock %}
